// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  role String @default("user")
  reminders Reminder[]

  @@map(name: "users")
}

model Reminder {
  id Int @id @default(autoincrement())
  user User @relation(fields: [userId], references: [id])
  userId Int
  title String
  completed Boolean

  @@map(name: "reminders")
}